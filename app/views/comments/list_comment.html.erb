<div class="container" >
<table class="table table-dark">
<thead>
  <tr>
    <th scope="col"><h5>Original Tweet</h5><%= @tweet.title %> -> <%= @tweet.user.username%> </th></th>
  </tr>
</thead>
<tbody>
  <%@comments.each do |comment|%>
    <tr>
            <td> <%= comment.title %>
            <br>
            @<%= comment.user.username %>
            </td>
    </tr>
  <% end %>
</tbody>
</table>
</div>